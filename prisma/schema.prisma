generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  firstname String
  lastname  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  blogs     Blog[]
}

model Blog {
  id          String   @id @default(cuid())
  title       String
  description String
  content     String
  images      String[]
  status      Boolean  @default(false)
  order       Int? // order inside the series

  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  series    Series?  @relation(fields: [seriesId], references: [id])
  seriesId  String?

}

model Series {
  id          String  @id @default(cuid())
  slug        String  @unique
  title       String
  description String?
  coverImage  String? // hero image or card image

  posts     Blog[] // one-to-many relationship
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
